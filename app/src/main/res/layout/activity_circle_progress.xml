<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/cb1"
        android:text="是否显示外环"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/cb2"
        android:text="圆环内是否填充"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/cb3"
        android:text="是否渐变色"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.ilab.widgetlibrary.CircleProgressView
        android:id="@+id/cpvProgressView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:cpv_background_circle_color="#00ff00"
        app:cpv_background_circle_width="50dp"
        app:cpv_circle_color="#ff0000"
        app:cpv_circle_width="50dp"
        app:cpv_first_from_second="50"
        app:cpv_inner_circle_color="#8DDAFF"
        app:cpv_isShowInnerCircle="false"
        app:cpv_isShowOutCircle="false"
        app:cpv_outside_ring_color="#FF0000"
        app:cpv_outside_ring_width="1dp"
        app:cpv_text_color="#FF0000"
        app:cpv_text_size="40"
        app:cpv_text_suffix="%"
        app:cpv_tip_text="已占用"
        app:cpv_tip_text_color="#FF0000"
        app:cpv_tip_text_size="26" />
</LinearLayout>